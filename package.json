{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A simple URL shortener application built with Node.js and Tailwind CSS.",
  "main": "src/server.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --watch",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pg": "^8.16.3",
    "prisma": "^3.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "postcss": "^8.0.0",
    "tailwindcss": "^2.0.0"
  },
  "keywords": [
    "url",
    "shortener",
    "nodejs",
    "express",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT"
}
